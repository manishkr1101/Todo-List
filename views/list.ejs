<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<items.length; i++) { %>
      <form action="/delete" method="POST">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= items[i]._id %>" onchange="this.form.submit()" >
          <p><%=  items[i].name  %></p>
        </div>
        <input type="hidden" name="listTitle" value="<%= listTitle %>">
      </form>
      
      <% } %>

      

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus required>
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
